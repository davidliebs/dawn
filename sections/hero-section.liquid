<div class="">
  <div class="tw-absolute tw-inset-0 tw-bg-black">
    {% if section.settings.background_image %}
      <img
        src="{{ section.settings.background_image.src | image_url }}"
        alt="Background"
        class="tw-w-full tw-h-full tw-object-cover"
        width="100%"
        height=""
      >
      <div class="tw-absolute tw-inset-0 tw-bg-black/50"><div></div></div>
    {% else %}
      <div class="tw-absolute tw-inset-0 tw-bg-black"><div></div></div>
      <div
        class="tw-from-electric-blue-900/30 tw-to-graphite-900/20 tw-absolute tw-inset-0 tw-bg-gradient-to-br tw-via-black"
      >
        <div></div>
      </div>
    {% endif %}
  </div>

  <div class="tw-relative tw-mx-auto tw-max-w-7xl tw-px-4 tw-text-center sm:tw-px-6 lg:tw-px-8 tw-py-20 md:tw-pt-0">
    <div class="tw-space-y-24">
      <button class="tw-border-solid tw-border-electric-blue-500/40 tw-bg-electric-blue-500/20 tw-inline-flex tw-items-center tw-gap-2 tw-rounded-full tw-border-2 tw-px-4 tw-py-2">
        <span class=" tw-text-electric-blue-400 tw-text-sm tw-p-3 tw-font-bold tw-tracking-wider tw-uppercase">
          {{ section.settings.highlight_text }}
        </span>
      </button>

      <div class="tw-space-y-8">
        <h1 class="tw-text-6xl tw-leading-none tw-font-black tw-tracking-tighter sm:tw-text-8xl lg:tw-text-9xl tw-text-white tw-my-2">
          {% if section.settings.heading_order == 'reversed' %}
            <span class="tw-from-electric-blue-200 tw-to-electric-blue-800 tw-bg-gradient-to-r tw-bg-clip-text tw-text-transparent tw-block">
              {{ section.settings.colored_heading }}
            </span>
            {{ section.settings.heading }}
          {% else %}
            {{ section.settings.heading }}
            <span class="tw-from-electric-blue-200 tw-to-electric-blue-800 tw-bg-gradient-to-r tw-bg-clip-text tw-text-transparent tw-block">
              {{ section.settings.colored_heading }}
            </span>
          {% endif %}
        </h1>

        <p class="tw-mx-auto tw-max-w-4xl tw-text-xl tw-leading-relaxed tw-font-medium tw-text-gray-300 sm:tw-text-2xl">
          {{ section.settings.subheading }}
        </p>
      </div>

      <div class="tw-mx-auto tw-flex tw-flex-col tw-items-center tw-justify-center tw-gap-6 sm:tw-gap-12 tw-px-20 sm:tw-flex-row">
        {% if section.settings.button_primary_label %}
          <a
            href="{{ section.settings.button_primary_link | default: '/collections/all' }}"
            class="tw-w-full tw-no-underline"
          >
            <button
              class="tw-rounded tw-w-full tw-py-9 tw-border-none  tw-from-electric-blue-500 tw-no-underline hover:tw-from-electric-blue-600 tw-to-electric-blue-800 hover:tw-to-electric-blue-900 tw-bg-gradient-to-r tw-text-lg tw-font-black tw-tracking-wider tw-text-white tw-uppercase tw-duration-300"
            >
              {{ section.settings.button_primary_label }}
            </button>
          </a>
        {% endif %}

        {% if section.settings.button_secondary_label %}
          <a
            class="tw-w-full tw-no-underline"
            href="{{ section.settings.button_secondary_link | default: '/story' }}"
          >
            <button
              class="tw-border-2 tw-border-white tw-bg-transparent tw-text-white tw-w-full tw-py-8 tw-border-solid tw-rounded tw-text-lg tw-font-black tw-uppercase tw-tracking-wider hover:tw-bg-white hover:tw-text-black tw-duration-300"
            >
              {{ section.settings.button_secondary_label }}
            </button>
          </a>
        {% endif %}
      </div>

      <div class="tw-mx-auto tw-grid tw-grid-cols-1 tw-gap-8 sm:tw-grid-cols-3">
        {% for block in section.blocks %}
          {% assign mod = forloop.index0 | modulo: 2 %}
          <div class="tw-flex tw-flex-col tw-space-y-2 tw-text-center">
            {% if mod == 0 %}
              <div class="tw-text-electric-blue-400 tw-text-4xl tw-font-black">{{ block.settings.value }}</div>
            {% else %}
              <div class="tw-text-graphite-400 tw-text-4xl tw-font-black">{{ block.settings.value }}</div>
            {% endif %}
            <div class="tw-font-semibold tw-tracking-wide tw-text-gray-400 tw-uppercase">
              {{ block.settings.label }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "tw-relative tw-flex tw-min-h-screen tw-items-center tw-justify-center tw-overflow-hidden tw-py-10",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "highlight_text",
      "label": "Highlight Label",
      "default": "Elite Performance Gear"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "TRAIN LIKE A"
    },
    {
      "type": "text",
      "id": "colored_heading",
      "label": "Colored Heading",
      "default": "CHAMPION"
    },
    {
      "type": "select",
      "id": "heading_order",
      "label": "Heading Order",
      "options": [
        { "value": "normal", "label": "Heading → Colored Heading" },
        { "value": "reversed", "label": "Colored Heading → Heading" }
      ],
      "default": "normal"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Born in the Andes. Built for champions. Worn by wolves."
    },
    {
      "type": "text",
      "id": "button_primary_label",
      "label": "Primary Button Label",
      "default": "Shop Collection"
    },
    {
      "type": "url",
      "id": "button_primary_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "button_secondary_label",
      "label": "Secondary Button Label",
      "default": "See the Story"
    },
    {
      "type": "url",
      "id": "button_secondary_link",
      "label": "Secondary Button Link"
    }
  ],
  "blocks": [
    {
      "type": "info_item",
      "name": "Info Item",
      "settings": [
        {
          "type": "text",
          "id": "value",
          "label": "Value"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}
